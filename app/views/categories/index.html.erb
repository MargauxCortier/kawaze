<section class="content">
	<div class="container">
    <div class="row">
      <div class="col-lg-8 breadcrumbf" style="line-height: 0 !important; margin-top: 15px">
        <%= link_to "Home", root_path %> <span class="diviver">&gt;</span> <%= link_to "Categories", categories_path %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8">
        <%= link_to "New Category", new_category_path, class: "btn-sm btn-success" %>
      </div>
    </div>
  </div>


</br>
<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-6">
			<% @categories.each do |category| %>
			<div class="post">
					<div style="padding: 10px 94px 0px 94px ">
						<h2><%= link_to category.title, category_path(category) %></h2>
						<% if category.forums.size > 0 %>
						<p>There is <%= category.forums.size %> forum in this category.</p>
						<% elsif category.forums.size > 1 %>
						<p>There are <%= category.forums.size %> forums in this category.</p>
						<% else %>
						<p>There are currently no forums.</p>
						<% end %>
					</div>
					<div class="postinfobot">
						<%= link_to "Edit Category", edit_category_path(category), class: "btn-warning btn-sm" %>
						<%= link_to "Delete Category", category_path(category), :confirm => "Are you sure you want to delete this category?", :method => :delete, class: "btn-danger btn-sm" %>
						<%= link_to "New Forum", new_category_forum_path(category), class: "btn-success btn-sm" %>
					</div>
			</div>
			<% end %>
		</div>
	</div>
</div>
</section>