<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 breadcrumbf">
                <h1>Se Connecter</h1> 
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">

            <!-- POST -->
                <div class="post">
                    <div class="form newtopic">
                        <div class="postinfotop">

                            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                            <%= devise_error_messages! %>

                            <!-- acc section -->
                            <div class="accsection">
                            <!-- FORM PART -->
                                <div class="topwrap">
                                    <div class="posttext pull-left">
                                        <div class="row">

                                            <div class="col-lg-6 col-md-6 col-xs-12">
                                                <%= f.text_field :email, autofocus: true, autocomplete: "email", :placeholder=>"Email", :class=>"form-control", :id=> "register-email" %><br />
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-6 col-md-6 col-xs-12">
                                                    <%= f.password_field :password, autocomplete: "current-password", :placeholder=>"Mot de Passe", :class=>"form-control" %>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="clearfix"></div>
                                    <!-- / FORM PART -->
                                    </div>  
                                </div>
                            </div>
                        </div>
                    </div>

                            <div class="postinfobot">
                                <div class="row">
                                    <div class="col-lg-4 col-lg-4 col-xs-12">
                                        <% if devise_mapping.rememberable? -%>
                                        <%= f.check_box :remember_me %>
                                        <%= f.label :se_souvenir_de_moi %>
                                        <% end -%>  
                                    </div>
                                    <div class="col-lg-8 col-lg-8">
                                        <%= f.submit "Se connecter", :id=>"reg-submit", :class=>"btn btn-primary" %>
                                        <%= render "devise/shared/links" %> 
                                    </div>
                                </div>
                            <div class="clearfix"></div>
                            </div>
                        
                        <% end %>
                    </div><!-- POST -->
                </div>
            </div>
        </div>
    </div>
</div>

