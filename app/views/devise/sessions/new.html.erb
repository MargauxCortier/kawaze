<div class="content">
  <div class="container" style='padding-top:40px'>
  <div class="row">
    <div class="col-md-12">
      <div class="post">
            <div class="form newtopic">


              <div class="accsection networks">
                <div class="acccap">
                  <div class="posttext pull-centre">
                    <div class="hnotice">
                      Inscription
                    </div>
                    <div class="clearfix"></div>
                  </div>
                </div>
                <div class="topwrap">
                  <div class="posttext pull-left">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <!-- acc section -->
   
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder=>"Email", :class=>"form-control", :id=> "register-email" %>
             
                        <%= f.password_field :password, autocomplete: "current-password", :placeholder=>"Password", :class=>"form-control" %>
                     
                        <% if devise_mapping.rememberable? -%>
                                <%= f.check_box :remember_me %>
                              <%= f.label :remember_me %>
                          <% end -%>
                      

                          <%= f.submit "Log In", :id=>"reg-submit", :class=>"btn btn-primary" %>
                          

                       
                      <% end %>
                      <%= render "devise/shared/links" %>


                  </div>
                  <div class="clearfix"></div>
                </div>  
              </div><!-- acc section END --> 
          </div>
        </div>
    </div>
  </div>
</div>

</div>

          