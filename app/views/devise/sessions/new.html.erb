<div class="content">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 breadcrumbf">
        <a href="#">Create New account</a> 
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-8">

        <!-- POST -->
        <div class="post">
          <div class="form newtopic">
            <div class="postinfotop">
              <h2>Sign IN</h2>
            </div>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <!-- acc section -->
            <div class="accsection">
              <div class="topwrap">

                <div class="posttext pull-left">
                  <div class="row">
                    <div class="col-lg-6 col-md-6">
                      <div>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder=>"Email", :class=>"form-control", :id=>"register-email" %><br />
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-lg-6 col-md-6">
                        <%= f.password_field :password, autocomplete: "current-password", :placeholder=>"Password", :class=>"form-control" %>
                      </div>
                    </div>
                  </div>

                    <div class="clearfix"></div>
                  </div>  
                </div>

                <div class="postinfobot">

                    <div class="notechbox pull-left">
                      <input type="checkbox" name="note" id="note" class="form-control" />
                    </div>

                    <div class="pull-left lblfch">
                          <% if devise_mapping.rememberable? -%>
                            <div class="row">
                              <div class="col-lg-6 col-md-6">
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                              </div>
                            </div>
                          <% end -%>
                    </div>

                    <div class="pull-right postreply">
                        <div class="pull-left smile"><a href="#"><i class="fa fa-smile-o"></i></a></div>
                        <div class="pull-left"><%= f.submit "Log In", :id=>"reg-submit", :class=>"btn btn-primary" %></div>
                        <div class="clearfix"></div>
                    </div>


                    <div class="clearfix"></div>
                </div>

              </div>
            </div>
          <% end %>
        </div>
      </div><!-- POST -->
    </div>
  </div>
</div>
                    <div class="action">
                      <%= render "devise/shared/links" %>
                    </div>
                  </div>