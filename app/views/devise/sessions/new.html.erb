<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 breadcrumbf">
                <h1>Se Connecter</h1> 
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">

                <!-- POST -->
                <div class="post">
                    <div class="form newtopic">
                        <div class="postinfotop">
                        </div>

                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <%= devise_error_messages! %>

                        <!-- acc section -->
                        <div class="accsection">

                            <div class="topwrap">


                                <div class="posttext pull-left">
                                    <div class="row">

                                        <div class="col-lg-6 col-md-6">
                                            <%= f.text_field :email, autofocus: true, autocomplete: "email", :placeholder=>"Email", :class=>"form-control", :id=> "register-email" %><br />
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-6 col-md-6">
                                                <%= f.password_field :password, autocomplete: "current-password", :placeholder=>"Mot de Passe", :class=>"form-control" %>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="clearfix"></div>
                                    <% if devise_mapping.rememberable? -%>
                                    <%= f.check_box :remember_me %>
                                    <%= f.label :remember_me %>
                                    <% end -%>
                                </div>  
                            </div><!-- acc section END -->


                            <div class="postinfobot">

                                <div class="pull-left postreply">
                                    <div class="pull-left">
                                        <%= f.submit "Se connecter", :id=>"reg-submit", :class=>"btn btn-primary" %>
                                    </div>

                                    <div class="pull-right">
                                        <%= render "devise/shared/links" %>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>

                            <% end %>

                        </div><!-- POST -->
                    </div>
                </div>
            </div>
        </div>

    </div>