<div class="headernav" <%= current_page?("/")? '' : 'headernav-style-two'  %>">
    <div class="container">
        <div class="row">
            <div class="col-lg-1 hidden-xs hidden-sm col-md-2 logo ">
                <a href="/">
                    <div class="img_logo" style="padding:10%">
                        <%= image_tag('logo1.png', size:"45") %>
                    </div>
                </a>
            </div> 

            <div class="col-lg-4 col-xs-9 col-sm-5 col-md-4 avt">
                <div class="stnt pull-left">                            
                    <form action="03_new_topic.html" method="post" class="form">
                        <a href="/find"><button class="btn btn-primary">Contacter des utilisateurs</button></a>
                    </form>
                </div>
            </div>

            <div class="col-lg-4 search hidden-xs hidden-sm col-md-3">
                <div class="wrap">
                    <form action="/" method="post" class="form">
                        <div class="pull-left txt"><input type="text" class="form-control" placeholder="Recheche par Topic"></div>
                        <div class="pull-right"><button class="btn btn-default" type="button"><i class="fa fa-search"></i></button></div>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>

            <% if user_signed_in? %>

            <div class="col-lg-3 col-xs-3 avt">
                  
                <div class="avatar pull-left dropdown">
                  <a data-toggle="dropdown" href="/" style="text-decoration:none">
                    <%= image_tag('avatar.jpg') %>
                    <b class="caret"></b>
                  </a>
                  
                  <div class="status green">&nbsp;</div>
                    <ul class="dropdown-menu" role="menu">
                      <li role="presentation"><a href="/">Home</a></li>
                      <li role="presentation"><a href="/users/<%= current_user.id %>">My Profile</a></li>
                      <li role="presentation"><a href="/users/edit">Edit my Profile</a></li>
                      <li role="presentation"><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
                    </ul>
                  <div class="clearfix"></div>
              </div>
              
              <div class="col-lg-1 hidden-xs hidden-sm avt">
                  <a data-toggle="dropdown" href="/" style="text-decoration:none">
                    <div class="current_name">
                      <%= current_user.name %>
                    </div>
                  </a>

                <ul class="dropdown-menu" role="menu">
                    <li role="presentation">
                      <a href="/">Home</a>
                    </li>
                    <li role="presentation">
                      <a href="/users/<%= current_user.id %>">My Profile</a>
                    </li>
                    <li role="presentation">
                      <a href="/users/edit">Edit my Profile</a>
                    </li>
                    <li role="presentation"><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
                    </li>
                  </ul>
                <div class="clearfix"></div>
              </div>
          
        <% end %>

        </div>
    </div>
</div>

