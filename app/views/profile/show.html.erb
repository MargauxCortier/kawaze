<div class="content"  id="container-fluid">

<!-- POST -->
<div class="first_row">
    <div class="portfolio">

<!-- PROFIL --> 
<div class="col-sm-8 account-info">
    <div id="personal-info" class="account-info-content">
            <% if current_user == @user %>
                <div class="pull-right">
                <a class="btn btn-primary btn-lg" href="/users/edit" role="button">Editer</a>
                </div>
            <% end %>
            <h4>Info personnel <span class="pull-right"></span></h4><hr> 
            
            <div class="row">
                <div class="img_info_perso">
                <div class="col-xs-6 col-sm-4 col-lg-4">
                    <div class="bio-image">
                    <%= image_tag('avatarbig.png') %>
                    </div> 
                </div>

                <div class="col-xs-6 col-sm-8 col-lg-8" style="font-size: xx-large;">
                    <p><span><%= @user.name %></span> <% if @user.is_signed_in? %><span class="label label-success">En Ligne</span><% else %><span class="label label-danger">Hors Ligne</span><% end %></p>
                    <p>Ville:<%= @user.city %></p>
                    <% if current_user == @user %>
                    <p>Email: <span><%= current_user.email%></span></p>
                    <% end %>
                </div>
                </div>

            </div><!-- / row -->
        </div><!-- / personal-info -->

        <div id="shipping-info" class="account-info-content" style="font-size: medium;">
            <h4>A propos de moi<span class="pull-right"></span></h4><hr>
            <p class="space-bottom"></p>
            <p><%= @user.description %></p>
        </div><!-- / shipping-info -->
        
        <% if user_signed_in? %>
            <% if current_user != @user %>
                <div class="centered">
                    <a class="btn-primary btn-lg" href="/chat" role="button">Contacter par message</a>
                </div>
            <% end %>  
        <% end %>   
        <div class="clearfix"></div>
</div>
<!-- /PROFIL -->

        
        <!-- CONVERSATION -->
       <% if current_user == @user %>
           <div class="col-lg-4 col-md-4">
                <div class="sidebarblock">
                    <h3>Mes posts</h3>
                    <% @posts.each do |post| %>
                    <div class="divline"></div>
                    <div class="blocktxt">
                        <%= link_to post.title.capitalize, category_forum_path(Forum.find(post.forum_id).category_id, post.forum_id) %> <span class="badge pull-right"><%= post.comments.count %></span>
                    </div>
                    <% end %>
                </div>
            </div> 
        <% end %> 
        <!-- CONVERSATION -->
        <div class="clearfix"></div>
    </div>
  </div>
</div>

<script>
function myFunction() {
  var x = document.getElementById("myDIV");
  if (x.style.visibility === "hidden") {
    x.style.visibility = "visible";
  } else {
    x.style.visibility = "hidden";
  }
}
</script>