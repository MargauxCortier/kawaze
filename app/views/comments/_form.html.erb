<%= form_tag(category_forum_post_comments_path(@category, @forum, post), :method => :post) do  %>
            
	<%= label_tag :name %>
	<%= text_field_tag :name, nil, class: 'form-control' %>

	<%= label_tag :comment %>
	<%= text_field_tag :comment, nil,class: 'form-control' %>

	<%= submit_tag "Submit", class: "button is-primary" %>
<% end %>